{
    "name": "folder-depth-colorizer",
    "displayName": "Folder Depth Colorizer",
    "description": "Colorizes folders in the explorer based on their depth, similar to indent-rainbow.",
    "version": "0.0.1",
    "publisher": "your-name",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
        "type": "object",
        "title": "Folder Depth Colorizer",
        "properties": {
            "folderDepthColorizer.colors": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": [
                "#e0e0e0", "#d0d0ff", "#c0ffc0", "#ffd0d0", "#fffac0", "#d0f0ff"
            ],
            "description": "Colors to apply by folder depth. Index 0 = root level."
            },
            "folderDepthColorizer.barWidth": {
            "type": "number",
            "default": 3,
            "description": "The width (in spaces) of the badge to simulate a vertical bar."
            }
        }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.70.0",
        "typescript": "^4.9.5",
        "@types/node": "^14.14.37",
        "vscode-test": "^1.6.0"
    }
}